{{/has}}

{{#has tag="photo"}}
    <i class="fa fa-photo" rel="tooltip" title="Фото"></i>
{{/has}}

{{#has tag="music"}}
    <i class="fa fa-music" rel="tooltip" title="Музыка"></i>
{{/has}}

